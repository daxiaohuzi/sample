<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff33b588"
        android:orientation="vertical">


        <Button
            android:id="@+id/jump_stack"
            style="@style/btnStyle"
            android:text="跳转TestFragmentStack" />

        <Button
            android:id="@+id/jump_rxjava"
            style="@style/btnStyle"
            android:text="跳转RxJavaFragment" />

        <Button
            android:id="@+id/jump_viewPager"
            style="@style/btnStyle"
            android:text="跳转ViewPagerFragment" />

        <Button
            android:id="@+id/jump_taobao_anim"
            style="@style/btnStyle"
            android:text="跳转淘宝动画" />

        <Button
            android:id="@+id/jump_statusBar"
            style="@style/btnStyle"
            android:text="跳转沉浸状态栏" />

        <Button
            android:id="@+id/jump_Bezier"
            style="@style/btnStyle"
            android:text="跳转贝塞尔曲线" />

        <Button
            android:id="@+id/jump_Bezier3"
            style="@style/btnStyle"
            android:text="跳转贝塞尔曲线3" />


        <Button
            android:id="@+id/jump_circleBar"
            style="@style/btnStyle"
            android:text="跳转动画进度条" />

        <Button
            android:id="@+id/jump_simpleRecyclerFragment"
            style="@style/btnStyle"
            android:text="跳转简单Recycler" />

        <Button
            android:id="@+id/jump_custom_view"
            style="@style/btnStyle"
            android:text="跳转自定义View" />

    </LinearLayout>

</ScrollView>