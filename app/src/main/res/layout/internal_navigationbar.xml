<?xml version="1.0" encoding="utf-8"?><!--navigationbar 4x13 = 52 it w/h will be override-->
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.sample.View.FontedTextView
        android:id="@+id/internal_navi_title"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textSize="24sp" />

    <!--make sure layout_height == full-->
    <ProgressBar
        android:id="@+id/internal_navi_progress"
        android:layout_width="20dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/internal_navi_title"
        android:gravity="center_vertical"
        android:indeterminateDrawable="@drawable/progress_indicator" />


</merge>